<!DOCTYPE html>
<html lang="es" class="h-full">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - MetasAhorro</title>

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">
    <script src="https://cdn.tailwindcss.com"></script>

    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/MetasAhorro.styles.css" asp-append-version="true" />
</head>
<body class="min-h-full bg-gray-50 text-gray-800 antialiased">

    <header class="fixed inset-x-0 top-0 z-50 bg-white/90 backdrop-blur border-b border-gray-100">
        <nav class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 h-16 flex items-center justify-between" aria-label="Principal">
            <a asp-area="" asp-page="/Index" class="group inline-flex items-center gap-3">
                <img src="~/images/logo_cerdito.png" alt="Logo MetasAhorro" class="h-10 w-auto object-contain" />
                <span class="text-lg font-semibold tracking-tight text-gray-900 group-hover:text-indigo-600 transition-colors">
                    MetasAhorro
                </span>
            </a>

            <div class="hidden md:flex items-center gap-6 text-[15px] font-medium">
                <a asp-page="/Index"
                   class="relative text-gray-700 hover:text-indigo-600 transition
                          after:absolute after:-bottom-1 after:left-0 after:h-0.5 after:w-0
                          after:bg-indigo-600 after:transition-all after:duration-300 hover:after:w-full">
                    Inicio
                </a>
                <a asp-page="/Goals/Index"
                   class="relative text-gray-700 hover:text-indigo-600 transition
                          after:absolute after:-bottom-1 after:left-0 after:h-0.5 after:w-0
                          after:bg-indigo-600 after:transition-all after:duration-300 hover:after:w-full">
                    Mis Metas
                </a>
                <a asp-page="/Goals/New"
                   class="inline-flex items-center gap-2 px-4 py-2 rounded-lg bg-indigo-600 text-white hover:bg-indigo-700 shadow-sm transition">
                    <i class="bi bi-plus-lg"></i> Nueva Meta
                </a>
            </div>

            <button id="menu-btn"
                    class="md:hidden inline-flex items-center justify-center rounded-lg p-2 text-gray-700 hover:text-indigo-600 hover:bg-gray-100 transition"
                    aria-controls="mobile-menu"
                    aria-expanded="false"
                    aria-label="Abrir menú">
                <i class="bi bi-list text-2xl"></i>
            </button>
        </nav>

        <div id="mobile-menu"
             class="md:hidden hidden border-t border-gray-100 bg-white"
             role="dialog" aria-modal="true">
            <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-3 space-y-1">
                <a asp-page="/Index" class="block rounded-lg px-3 py-2 text-gray-700 hover:bg-gray-50 hover:text-indigo-600">
                    Inicio
                </a>
                <a asp-page="/Goals/Index" class="block rounded-lg px-3 py-2 text-gray-700 hover:bg-gray-50 hover:text-indigo-600">
                    Mis Metas
                </a>
                <a asp-page="/Goals/New" class="block rounded-lg px-3 py-2 bg-indigo-600 text-white hover:bg-indigo-700">
                    + Nueva Meta
                </a>
            </div>
        </div>
    </header>

    <main role="main" class="max-w-7xl mx-auto w-full px-4 sm:px-6 lg:px-8 pt-24 pb-12">
        @RenderBody()
    </main>

    <footer class="bg-white border-t border-gray-200">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-12 gap-10">            <div class="lg:col-span-5">
                <div class="flex items-center gap-3 mb-3">
                    <span class="text-lg font-semibold text-gray-900">MetasAhorro</span>
                </div>
                <p class="text-sm text-gray-500 leading-6">
                    Organiza tus objetivos, deposita de forma constante y visualiza tu progreso con claridad.
                    Tu camino hacia el ahorro comienza aquí.
                </p>
            </div>

            <div class="lg:col-span-3">
                <h3 class="text-sm font-semibold text-gray-900 mb-3">Información</h3>
                <ul class="space-y-2 text-sm">
                    <li class="flex items-center gap-2">
                        <i class="bi bi-people text-indigo-600"></i>
                        <a asp-page="/About" class="text-gray-600 hover:text-indigo-600 transition">Sobre nosotros</a>
                    </li>
                    <li class="flex items-center gap-2">
                        <i class="bi bi-shield-check text-indigo-600"></i>
                        <a asp-page="/Privacy" class="text-gray-600 hover:text-indigo-600 transition">Política de privacidad</a>
                    </li>
                </ul>
            </div>

           <div class="lg:col-span-4 lg:justify-self-end">
  <h3 class="text-sm font-semibold text-gray-900 mb-3 text-left lg:text-left">Contacto</h3>
  <ul class="space-y-2 text-sm text-gray-600 lg:text-right">
                    <li class="flex items-center gap-2 lg:justify-end">
                        <i class="bi bi-envelope text-indigo-600"></i>
                        <a href="mailto:hola@metasahorro.app" class="hover:text-indigo-600 transition">hola@metasahorro.app</a>
                    </li>
                    <li class="flex items-center gap-2">
    <i class="bi bi-chat-dots text-indigo-600"></i>
    <a asp-page="/Contact" class="hover:text-indigo-600 transition">Escríbenos</a>
</li>

                </ul>
            </div>
        </div>

        <div class="mt-10 pt-6 border-t border-gray-200 flex flex-col sm:flex-row items-center justify-between gap-3">
            <p class="text-sm text-gray-500">
                &copy; @DateTime.Now.Year <span class="font-medium text-gray-700">MetasAhorro</span>. Todos los derechos reservados.
            </p>
            <div class="flex items-center gap-4 text-gray-400">
                <a href="#" class="hover:text-indigo-600 transition" aria-label="Twitter"><i class="bi bi-twitter-x"></i></a>
                <a href="#" class="hover:text-indigo-600 transition" aria-label="Instagram"><i class="bi bi-instagram"></i></a>
                <a href="#" class="hover:text-indigo-600 transition" aria-label="Facebook"><i class="bi bi-facebook"></i></a>
            </div>
        </div>
    </div>
</footer>
    <!-- Scripts -->
    <script>
        (function () {
            const btn = document.getElementById('menu-btn');
            const menu = document.getElementById('mobile-menu');
            if (!btn || !menu) return;

            btn.addEventListener('click', () => {
                const expanded = btn.getAttribute('aria-expanded') === 'true';
                btn.setAttribute('aria-expanded', (!expanded).toString());
                menu.classList.toggle('hidden');
            });

            menu.addEventListener('click', (e) => {
                const a = e.target.closest('a[href]');
                if (a) {
                    menu.classList.add('hidden');
                    btn.setAttribute('aria-expanded', 'false');
                }
            });
        })();
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
