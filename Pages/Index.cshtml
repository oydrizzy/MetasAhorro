@page
@model IndexModel
@{
    ViewData["Title"] = "Inicio";
}

<section class="min-h-screen w-full bg-gradient-to-b from-indigo-600 to-fuchsia-600 text-white flex flex-col items-center justify-center text-center px-6">
    <h1 class="text-5xl font-extrabold mb-4 flex items-center justify-center gap-2">
        <i class="bi bi-graph-up-arrow"></i>
        Metas de Ahorro
    </h1>

    <p class="mb-8 text-lg text-indigo-100 max-w-lg">
        Organiza tus finanzas, define tus metas y sigue tu progreso paso a paso.
    </p>

    <div class="flex flex-col sm:flex-row gap-4">
        <a asp-page="/Goals/Index"
           class="px-6 py-3 rounded-lg bg-white text-indigo-700 font-semibold shadow hover:bg-gray-100 transition flex items-center justify-center gap-2">
            <i class="bi bi-list-check"></i> Ver mis metas
        </a>

        <a asp-page="/Goals/New"
           class="px-6 py-3 rounded-lg bg-fuchsia-500 text-white font-semibold shadow hover:bg-fuchsia-600 transition flex items-center justify-center gap-2">
            <i class="bi bi-plus-circle"></i> Crear nueva meta
        </a>
    </div>
</section>
